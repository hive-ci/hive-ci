<%- model_class = ExecutionType -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th>Name</th>
    <th>Template</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @execution_types.each do |execution_type| %>
    <tr>
      <td><%= execution_type.id %></td>
      <td><%= execution_type.name %></td>
      <td><%= truncate(execution_type.template, length: 50) %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_admin_execution_type_path(execution_type), :class => 'btn btn-mini' %>
        <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    execution_type_path(execution_type),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_execution_type_path,
            :class => 'btn btn-primary' %>
